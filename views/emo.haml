!!! Strict
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
      %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
      %link{:charset => "utf-8", :href => "/css/styles.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
        %title
          emo
  %body#page_index
    #header.clearfix
      #nav
        [1]Click an emo to copy it to your clipboard. [2] Paste it anywhere on the web. [3] Visit
        %a{:href => "http://jeremywentworth.com"} jeremywentworth.com
        #clipboard_empty
        #clipboard_buffer_container{:style => "display: none;"}
          #clipboard_buffer
          %a#clear_buffer{:href => "#", :name => "clear_buffer"}
        #formats
          %span.bullet
          %a#text_html_toggler{"alternate-value" => "As text", :href => "#", :name => "text_html_toggler"}
    #contents
      - for @emo in @emos
        %span{"data-entity" => ""}= html_escape(@emo)
    %script{:charset => "utf-8", :src => "http://ajax.googleapis.com/ajax/libs/prototype/1.6.0.3/prototype.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "http://ajax.googleapis.com/ajax/libs/scriptaculous/1.8.2/effects.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "http://ajax.googleapis.com/ajax/libs/swfobject/2.1/swfobject.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/js/all.js", :type => "text/javascript"}